<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="?attr/colorPrimaryContainer"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Jackpot Name -->
    <TextView
        android:id="@+id/jackpotNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Jackpot Name" />

    <!-- Jackpot Description -->
    <TextView
        android:id="@+id/jackpotDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        tools:text="Jackpot Description" />

    <!-- Jackpot Price -->
    <TextView
        android:id="@+id/jackpotPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        tools:text="Jackpot Price" />

    <!-- Ticket Price -->
    <TextView
        android:id="@+id/ticketPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        tools:text="Ticket Price" />

    <!-- Created By -->
    <TextView
        android:id="@+id/createdByTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="Created By" />
</LinearLayout>
